<h1>Restaurants</h1>

<div class=container>
<p> <%= link_to "add new", new_restaurant_path  %></p>

<% @restaurants.each do |restaurant|  %>
<p> <%= restaurant.name %> - <%= restaurant.category %> </p>
<p> <%= restaurant.address %> - <%= restaurant.phone_number %></p>
<p> <%= link_to "view more", restaurant_path(restaurant)  %> </p>
<% end  %>
</div>
